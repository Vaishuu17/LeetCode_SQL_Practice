-- Problem: Fix Names in a Table
-- LeetCode ID: 1667
-- Difficulty: Easy
-- Topic: String Functions
-- Link: https://leetcode.com/problems/fix-names-in-a-table/

SELECT user_id,
       CONCAT(
           UPPER(LEFT(name, 1)),
           LOWER(SUBSTRING(name, 2))
       ) AS name
FROM Users
ORDER BY user_id;
